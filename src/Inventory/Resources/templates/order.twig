<!DOCTYPE html>
<html lang="en">
<head>
    <title>DFP inventory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="{{ getResourcePath('Common:css/bootstrap.min.css') }}"/>
    <link rel="stylesheet" href="{{ getResourcePath('Common:css/style.css') }}"/>
</head>
<body>
<nav class="navbar navbar-static-top navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <div class="navbar-brand">
                DFP inventory
            </div>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="https://developers.google.com/doubleclick-publishers/docs/reference/v201608/LineItemService"
                   target="_blank">
                    API reference (includes list of errors)
                </a>
            </li>
        </ul>
    </div>
</nav>
<div class="container" style="margin-bottom: 20px;">
    <div class="row">
        <h3>Create order</h3>
    </div>
</div>
{% for response in responses %}
    {% if response.message is not null %}
        <div class="container">
            <div class="row">
                <div class="col-sm-offset-1 col-sm-10">
                    <div class="alert alert-{{ response.messageType }} alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <p>{{ response.message|raw }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endfor %}
<div class="container">
    <div class="row">
        <form method="post" action="{{ action }}">
            <div class="col-sm-offset-2 col-sm-8">
                <div class="form-group">
                    <label for="sizeIterator">List of comma separated %%sizeElement%% values to loop through</label>
                    <input type="text" class="form-control" id="sizeIterator" name="sizeIterator"
                           placeholder="e.g. 728x90, 970x250, 300x250..."/>
                </div>
                <div class="form-group">
                    <label for="orderName">Order Name</label>
                    <input type="text" class="form-control" id="orderName" name="orderName" placeholder="e.g. PartnerFoo LB %%sizeElement%%"/>
                </div>
                <div class="form-group">
                    <label for="creativeName">Creative Name</label>
                    <input type="text" class="form-control" id="creativeName" name="creativeName" placeholder="e.g. PartnerFoo LB %%sizeElement%%"/>
                </div>
                <div class="form-group">
                    <label for="creativeTemplateId">Creative template ID</label>
                    <input type="text" class="form-control" id="creativeTemplateId" name="creativeTemplateId" placeholder="Creative template ID"/>
                </div>
                <div class="form-group">
                    <label for="advertiserId">Advertiser ID</label>
                    <input type="text" class="form-control" id="advertiserId" name="advertiserId" placeholder="Advertiser Id"/>
                </div>
                <div class="form-group">
                    <label for="traffickerId">Trafficker ID</label>
                    <input type="text" class="form-control" id="traffickerId" name="traffickerId" placeholder="Trafficker ID"/>
                </div>

                <hr/>

                <h3>Line Items data</h3>
                {% include 'partials/line-item-form-fields.twig' %}

                <div class="row text-right">
                    <button class="btn btn-wikia"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        SUBMIT ORDER
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="{{ getResourcePath('Common:js/jquery.min.js') }}" type="text/javascript"></script>
<script src="{{ getResourcePath('Common:js/bootstrap.min.js') }}" type="text/javascript"></script>
<script type="text/javascript">
	var submittedForm = {{ form|raw }};
</script>
<script src="{{ getResourcePath('Inventory:js/order.js') }}" type="text/javascript"></script>
<script src="{{ getResourcePath('Inventory:js/line-item.js') }}" type="text/javascript"></script>
</body>
</html>
